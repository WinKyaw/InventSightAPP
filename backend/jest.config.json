{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/src/tests/**/*.test.ts",
    "**/src/**/*.test.ts"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/types/**/*.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"]
}